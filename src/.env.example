# Required
OPENAI_API_KEY=

# Optional LLM overrides
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7

# TTS voices per agent
TTS_VOICE_BOB=alloy
TTS_VOICE_ALICE=shimmer
TTS_MODEL=tts-1
TTS_CHUNK_SIZE=4096

# Streaming server
PORT=8000
WS_COALESCE_MS=25       # Batch WS sends every N ms to reduce flood

# Voice Activity Detection
VAD_SPEECH_THRESHOLD=0.015    # RMS 0-1 above which audio is speech
VAD_SILENCE_MS=500            # ms of silence before end-of-utterance

# Guardrails
GUARDRAIL_ENABLED=true